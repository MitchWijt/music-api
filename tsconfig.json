{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ],
  "lib": ["es2015"]
}
